### Default Sway Config Customized for Your Setup ###

### Set your preferred terminal and shell ###
set $term kitty
set $shell zsh

### Mod key (usually the Super/Windows key) ###
set $mod Mod4

### Launch stuff ###
bindsym $mod+Return exec $term
#bindsym $mod+d exec bemenu -p "Run: "
bindsym $mod+d exec dmenu_path | bemenu -p "Run:"


bindsym $mod+Shift+q kill

### Exit sway ###
bindsym $mod+Shift+e exec "swaymsg exit"

### Reload the config file ###
bindsym $mod+Shift+c reload
bindsym $mod+Shift+r restart

### Floating toggle ###
bindsym $mod+Shift+space floating toggle

### Fullscreen toggle ###
bindsym $mod+f fullscreen toggle

### Move focus ###
bindsym $mod+h focus left
bindsym $mod+j focus down
bindsym $mod+k focus up
bindsym $mod+l focus right

### Move windows ###
bindsym $mod+Shift+h move left
bindsym $mod+Shift+j move down
bindsym $mod+Shift+k move up
bindsym $mod+Shift+l move right

### Workspaces ###
set $ws1 "1: "
set $ws2 "2: "
set $ws3 "3: "
set $ws4 "4: "
set $ws5 "5: "
set $ws9 "9: "

bindsym $mod+1 workspace $ws1
bindsym $mod+2 workspace $ws2
bindsym $mod+3 workspace $ws3
bindsym $mod+4 workspace $ws4
bindsym $mod+5 workspace $ws5
bindsym $mod+9 workspace $ws9

### Assign apps to workspaces (optional) ###
# assign [app_id="kitty"] $ws1

### Status bar (waybar) ###
bar {
    swaybar_command waybar
}

gaps inner 10
gaps outer 500

### Background ###
exec_always swaybg -i ~/fotos/bw-bg.jpg -m fill


# Resize mode
mode "resize" {
    bindsym h resize shrink width 10px
    bindsym j resize grow height 10px
    bindsym k resize shrink height 10px
    bindsym l resize grow width 10px

    # return to default mode
    bindsym Return mode "default"
    bindsym Escape mode "default"
}

bindsym $mod+r mode "resize"

input * {
    xkb_layout dk
}


